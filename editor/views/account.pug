head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title Login
  script(src='https://code.jquery.com/jquery-3.6.0.min.js')
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css', integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2', crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM', crossorigin='anonymous')
#accountModal.modal.fade(tabindex='-1', role='dialog', data-bs-backdrop='static', data-bs-keyboard='false')
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        h5#modalAccHeader.modal-title.w-100.text-center Your Account!
        button.close(type='button', data-dismiss='modal')
      #modalBody.modal-body.w-100.text-center
        img.rounded.mx-auto.d-block(src=file, alt='Avatar', style='width: 200px; height: 200px;')
        h5 Avatar
        #atributes
          .container-fluid
            .row
              p.col-6.fs-5(style='font-size:150%') Name: 
          .container-fluid
            .row
              p.col-6.fs-5(style='font-size:150%') Password: 
              .col-6.fs-5
                form(action='/account/change/password', method='get')
                  button.btn.btn-primary(type='submit') Change!
          .container-fluid
            .row
              p.col-6.fs-5(style='font-size:150%') Avatar
              .col-6.fs-5
                form(action='/account/change/avatar', method='get')
                  button.btn.btn-primary(type='submit') Change!
        h5 Statistics
      #modalFooter.modal-footer
        form.text-center(action='/logout', method='get', style='width: 100%;')
          button.btn.btn-primary(type='submit') Log out!
        form.text-center(action='/', method='get', style='width: 100%;')
          button.btn.btn-primary(type='submit') Leave and confirm changes!
script.
  $(window).on('load', function() {
  $('#accountModal').modal('show');
  });
